            "color": "#40000000"
        },
        
        "boldItalic": {
            "type": "Palatino-BoldItalic"
        },
        
        "boldItalic-left-mark": {
            "color": "#40000000"
        },
        
        "boldItalic-right-mark": {
            "color": "#40000000"
        },
        
        "code": {
            "font": "Menlo-Regular",
            "color": "#AA44AA",
            "size": 15
        },
    
        "code-left-backtick": {
            "color": "#660091f8"
        },
        
        "code-right-backtick": {
            "color": "#660091f8"
        },
        
        "checked": {
            "color": "#66333333",
