            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16
        },
        
        "special-char": {
            "font": "Menlo-Regular"
        },
        
        "tabbed": {
            "headIndent": 43
        },
        
        "quote-mark": {
            "color": "#800091f8",
            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16
        },
        
        "quote-content": {
            "color": "#333333",
            "type": "italic",
            "headIndent": 33
        },

        "online-verse-ref-link":  {
            "regex": "(\\[([1-3]?[A-Za-z]+)\\s*([0-9]{1,3})(:[0-9]{1,3}(\\-[0-9]{1,3}(:[0-9]{1,3})?)?)?\\])",
            "matchPosition": 1,
            "urlPosition": 1,
            "type": "link",
            "backgroundColor":"#ccccef",
            "font": "AvenirNext-Bold",
            "prefix": "https://www.biblegateway.com/passage/?search="
        },   
  
        "verse-ref-link":  {
            "regex": "(\\s|^|\\()(([1-3]?[A-Za-z]+)\\s+([0-9]{1,3}):[0-9]{1,3}(\\-[0-9]{1,3}(:[0-9]{1,3})?)?)",
            "matchPosition": 2,
            "urlPosition": 2,
            "type": "link",
            "underlineStyle": 1,
            "backgroundColor":"#efefcc",
            "font": "AvenirNext-Bold",
            "prefix": "olivetree://bible/"
        },   

