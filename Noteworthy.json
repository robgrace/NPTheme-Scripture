{
    "name": "Noteworthy (Mobile)",
    "style": "Light",
    "author": {
        "name": "Robert Grace",
        "email": "robert.grace@gmail.com"
    },
    
    "editor": {
        "backgroundColor": "#fffff2",
        "altBackgroundColor": "#eeeee1",
        "tintColor": "#000000",
        "tintColor2": "#ff1010",
        "textColor":"#000000",
        "toolbarBackgroundColor": "#ffffe6",
        "toolbarIconColor": "#FF4444",
        "menuItemColor": "#cc4444",
        "shouldOverwriteFont": false
    },
    
    "styles": {
        "body": {
            "font": "Noteworthy-Light",
            "size":18,
            "color": "#000000",
            "lineSpacing":-4,
            "paragraphSpacing":-1
     
        },

        "title1": {
            "color": "#743101",
            "size": 24,
            "font": "Noteworthy-Bold",
            "underlineStyle":1
        },
        
        "title2": {
            "color": "#743101",
            "size": 22,
            "font": "Noteworthy-Bold"
        },
        
        "title3": {
            "color": "#743101",
            "size": 20,
            "font": "Noteworthy-Bold"
        },
        
        "title-mark1": {
            "color": "#40000000",
            "size": 24,
            "font": "AvenirNext-DemiBold",
            "lineSpacing":-4,
            "paragraphSpacing":-1
        },
        
        "title-mark2": {
           "color": "#40000000",
           "size": 22,
           "font": "AvenirNext-DemiBold",
           "lineSpacing":-4,
           "paragraphSpacing":-1
        },
        
        "title-mark3": {
           "color": "#40000000",
           "size": 20,
           "font": "AvenirNext-DemiBold",
           "lineSpacing":-4,
           "paragraphSpacing":-1
        },
        
        "bold": {
            "font": "Noteworthy-Bold",
            "size":16,

            "type": "bold"
        },
        
        "bold-left-mark": {
            "color": "#40000000",
              "size": 10,
                        "lineSpacing":-4,
            "paragraphSpacing":-1,
        },
        
        "bold-right-mark": {
            "color": "#40000000",
              "size": 14,
        },
        
        "italic": {
            "font": "AvenirNextCondensed-MediumItalic",
            "type": "italic",
            "lineSpacing":-4,
            "paragraphSpacing":-1    
        },
        
        "italic-left-mark": {
            "color": "#40000000"
        },
        
        "italic-right-mark": {
            "color": "#40000000"
        },
        
        "boldItalic": {
            "type": "AvenirNextCondensed-BoldItalic"
        },
        
        "boldItalic-left-mark": {
            "color": "#40000000"
        },
        
        "boldItalic-right-mark": {
            "color": "#40000000"
        },
        
        "code": {
            "font": "AmericanTypewriter-Condensed",
            "color": "#AA44AA"
        },
    
        "code-left-backtick": {
            "color": "#660091f8",
            "lineSpacing":-4,
            "paragraphSpacing":-1
        },
        
        "code-right-backtick": {
            "color": "#660091f8"
        },
        
        "checked": {
            "color": "#66333333",
            "headIndent": 33,
            "lineSpacing":-4,
            "paragraphSpacing":-1
        },
        
        "todo": {
            "font": "noteplanstate",
            "color": "#d87001",
            "headIndent": 33,
            "size": 16,
            "lineSpacing":-4,
            "paragraphSpacing":-1
     
        },
        
        "checked-todo-characters": {
            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16,
            "lineSpacing":-4,
            "paragraphSpacing":-1
        },
        
        "special-char": {
            "font": "Menlo-Regular"
        },
        
        "tabbed": {
            "headIndent": 23,
            "lineSpacing":-4,
            "paragraphSpacing":-1
        },
        
        "quote-mark": {
            "color": "#800091f8",
            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16,
            "lineSpacing":-4,
            "paragraphSpacing":-1
        },
        
        "quote-content": {
            "color": "#333333",
            "type": "italic",
            "headIndent": 33
        },

       "bodini-ornaments-mark": {
            "regex": "(\\\\)(.)",
            "matchPosition": 1,
            "font": "courier",
            "isHiddenWithoutCursor": true,
            "isRevealOnCursorRange": true,    
        },
        
        "bodini-ornaments": {
            "regex": "(\\\\)(.)",
            "matchPosition": 2,
            "font": "BodoniOrnamentsITCTT",
            "size": 28,
            "isHiddenWithoutCursor": false,
            "isRevealOnCursorRange": true
        },

        "schedule-to-date-link": {
           "backgroundColor":"#10000000",
        },
        
        "done-date": {
            
        },
        
        "schedule-from-date-link": {
           "backgroundColor":"#10000000",
        },
 
        
        "note-title-link": {
           "backgroundColor":"#10000000",
        },

        "hashtag": {
           
        },
        
        "attag": {
         
        },
        "phonenumber": {
       
        }
    }
}
